npm install yargs


#!/usr/bin/env node

const yargs = require('yargs');
const { checkBrowsers } = require('./browserslist');

// Define command line arguments
const argv = yargs
  .option('target', {
    alias: 't',
    description: 'Target browserslist',
    type: 'string',
  })
  .help()
  .alias('help', 'h')
  .argv;

// Validate arguments
if (!argv.target) {
  console.error('Error: Please provide a target browserslist using --target or -t flag.');
  process.exit(1);
}

// Check browsers
checkBrowsers(argv.target)
  .then((result) => {
    console.log(`Browserslist check result for ${argv.target}:`);
    console.log(result);
  })
  .catch((error) => {
    console.error('Error:', error.message);
    process.exit(1);
  });


