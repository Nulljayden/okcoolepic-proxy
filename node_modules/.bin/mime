mkdir mime-cli && cd mime-cli


npm init -y


npm install commander


#!/usr/bin/env node

const { program } = require('commander');
const mime = require('mime-types');

program
  .version('1.0.0')
  .option('-t, --type <type>', 'Specify a MIME type')
  .option('-e, --extension <extension>', 'Specify a file extension')
  .parse(process.argv);

if (program.type && program.extension) {
  console.error('Error: Please provide either a MIME type or a file extension, not both.');
  process.exit(1);
}

const getData = (typeOrExtension) => {
  if (mime.lookup(typeOrExtension)) {
    return { type: mime.lookup(typeOrExtension), extension: mime.extension(typeOrExtension) };
  } else if (mime.extension(typeOrExtension)) {
    return { type: mime.lookup(mime.extension(typeOrExtension)), extension: typeOrExtension };
  } else {
    return { type: null, extension: null };
  }
};

if (program.type) {
  const data = getData(program.type);
  console.log(`MIME Type: ${data.type}`);
  console.log(`File Extension: ${data.extension}`);
} else if (program.extension) {
  const data = getData(program.extension);
